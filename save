NAME = libftprintf.a
NAME_SRCS =		ft_printf.c					\
				casting.c					\
				compute_conv.c				\
				flags.c						\
				flags_parsing_dispatch.c	\
				ft_itoa_printf.c			\
				ft_itoa_signed.c			\
				ft_putstr_buff.c			\
				main_test.c			\
				parsing.c	\
				parsing_cast.c\
				parsing_converter.c\
				parsing_func_collection.c\
				pitch.c	\
				prefix.c	\
				reset_print.c	\
				set_length.c	\
				unicode.c	\
				width.c	\
				width_lossy.c

SRCS = $(addprefix srcs/,$(NAME_SRCS))
OBJS = $(NAME_SRCS:.c=.o)
CC = clang

all : $(NAME)


$(NAME) : $(OBJS)
		make -C libft/ re

%.o : $(SRCS)
	$(CC) -c $(SRCS) -I includes

clean :
		rm $(OBJS)
